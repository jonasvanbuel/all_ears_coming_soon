<div class="container">
  <!-- Begin Mailchimp Signup Form -->
  <div id="mc_embed_signup" class="subscribe-form">

    <h2 class="bodyfont"><span>Subscribe</span> to our mailing list for early access to new audio content at an exhibition near you</h2>

    <form action="https://art.us7.list-manage.com/subscribe/post?u=b30f2f9dd971cbe23f59702c6&amp;id=969afe04b5" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
      <div id="mc_embed_signup_scroll">
        <div class="mc-field-group">
          <label for="mce-FNAME">First name *</label>
          <input type="text" value="" name="FNAME" class="required" id="mce-FNAME">
        </div>
        <div class="mc-field-group">
          <label for="mce-LNAME">Last name *</label>
          <input type="text" value="" name="LNAME" class="required" id="mce-LNAME">
        </div>
        <div class="mc-field-group">
          <label for="mce-EMAIL">Email address *</label>
          <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
        </div>
        <div id="mce-responses" class="clear">
          <div class="response" id="mce-error-response" style="display:none"></div>
          <div class="response" id="mce-success-response" style="display:none"></div>
        </div>
        <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
        <div style="position: absolute; left: -5000px;" aria-hidden="true">
          <input type="text" name="b_b30f2f9dd971cbe23f59702c6_969afe04b5" tabindex="-1" value="">
        </div>
        <div class="submit-button-container">
          <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
        </div>
      </div>
    </form>
  </div>
</div>

<!-- Overwrite default Mailchimp error / succes responses -->
<%= javascript_include_tag "mailchimp_success_error_message" %>
